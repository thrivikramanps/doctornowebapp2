	block content
		#header-container
			#header-banner.well.span12

		#middle-container
			input#login-time.disabled(type='text', name='login-time', value= udata.logintime, style = " border: 0px none rgb(255, 255, 255)")
			input#login-account.disabled(type='text', name='login-account', value= udata.user, style ="margin-left: 270px; border: 0px none rgb(255, 255, 255)")
			button(type="button")#btn-home.btn.btn-primary
					| Home
			button(type="button")#btn-logout-user.btn.btn-primary
					| Logout
		
		#evisitlist.well.span7(style = " margin-left: 190px")
			h3(align="center") Appointment List
			table.listcontainerheader(style = " width: 100%")
				tr.tableheader
					th(style = " width: 90px")
					th(style = " width: 90px") Date
					th(style = " width: 90px") Start
					th(style = " width: 90px") End
					th(style = " width: 90px") Nursing Home 
					th(style = " width: 90px")
			table#listcontainer(style = " width: 100%; height: 200px; overflow-y: auto")
				if (listevisits.length === 0)
					tr#noevisits
						th No eVisits.
				each evisititem, index in listevisits
					tr.evisitrecord
						td.evisitrecordactiondelete(style = "width: 90px")
							input(type='submit', value='delete', evisitid=evisititem._id.toString())
						td.evisitrecorddate(style = "width: 90px")
							span.name(style=" display: block; text-align: center")=evisititem.appointmentdate
						td.evisitrecordstart(style = "width: 90px")
							span.name(style=" display: block; text-align: center")=evisititem.appointmentstarttime
						td.evisitrecordend(style = "width: 90px")
							span.name(style=" display: block; text-align: center")=evisititem.appointmentendtime
						td.evisitrecordnh(style = "width: 90px")
							span.name(style=" display: block; text-align: center")=evisititem.user
						td.evisitrecordactionfetch(style = "width: 90px")
							input(type='submit', value='fetch', evisitid=evisititem._id.toString())

		#evisitpatientsublist.well.span4(style = "margin-left :30px")
			h3(align="center") Patient List
			table.patientlistcontainerheader(style = " width: 100%")
				tr.tableheader
					th Name
					th DOB
			table#patientlistcontainer(style = " width: 100%; height: 200px; overflow-y: auto")





