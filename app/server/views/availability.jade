	body

	block content
		#header-container
			#header-banner.well.span12

		#middle-container
			p#login-time Login Time
			p#login-account Login Account
			button(type="button")#btn-home.btn.btn-primary
					| Home
			button(type="button")#btn-logout-user.btn.btn-primary
					| Logout
		
		#footer-container
			form( method="post")#login-form.well.span4
				h3 Please Enter the Date, Free Time Period
				label Date 
				input#date-tf(type="text", name="date", id='date-tf').span4.required
				label Start Time
				input#starttime-tf(type="text", name="starttime", id='starttime-tf').span4.required
				label End Time
				input#endtime-tf(type="text", name="endtime", id='endtime-tf').span4.required
				button(type="submit")#btn-availability-submit.btn.btn-primary
					| Submit

			#availability-results-container
				button(type="button")#btn-availability-view.btn.btn-primary.special-button
					| View
				#availability-results.well.span8
					

		include modals/alert
		include modals/confirm


