				input(type="text", name="date", id='date-tf').span4.required
				label Start Time
				input(type="password", name="start-time", id='starttime-tf').span4.required
				label End Time
				input(type="password", name="end-time", id='endtime-tf').span4.required
				button(type="submit")#btn-login.btn.btn-primary
					| Submit

			#availability-results-container
				#availability-results.well.span8

