		script
			$(function() {
				document.getElementById('patient1dob-tf').datepicker();
				document.getElementById('patient2dob-tf').datepicker();
				document.getElementById('patient3dob-tf').datepicker();
				document.getElementById('patient4dob-tf').datepicker();
				document.getElementById('rangestartdate-tf').datepicker();
				document.getElementById('rangeenddate-tf').datepicker();
			});
	
	body

	block content
		#header-container
			#header-banner.well.span12

		#middle-container
			p#login-time Login Time
			p#login-account Login Account
			button(type="button")#btn-home.btn.btn-primary
					| Home
			button(type="button")#btn-logout-user.btn.btn-primary
					| Logout
		
		#footer-container
			form( method="post")#left-side.well.span6
				h4 Step 1: Enter Patients for this Visit
				hr
				label Name 										DOB
				input#patient1name-tf(type="text", name="patient1name", id='patient1name-tf').span4.required
				input#patient1dob-tf(type="text", name="patient1dob", id='patient1dob-tf').span2.required
				input#patient2name-tf(type="text", name="patient2name", id='patient2name-tf').span4.required
				input#patient2dob-tf(type="text", name="patient2dob", id='patient2dob-tf').span2.required
				input#patient3name-tf(type="text", name="patient3name", id='patient3name-tf').span4.required
				input#patient3dob-tf(type="text", name="patient3dob", id='patient3dob-tf').span2.required
				input#patient4name-tf(type="text", name="patient4name", id='patient4name-tf').span4.required
				input#patient4dob-tf(type="text", name="patient4dob", id='patient4dob-tf').span2.required		

				hr	
				h4 Step 2: Who is the supervising nurse for this Visit
				input#nursename-tf(type="text", name="nursename", id='nursename-tf').span5.required		

			#right-side.well.wellspecial.span3
				h4 Step 3: Enter Date Range for Visit
				hr
				input#rangestartdate-tf(type="text", name="rangestartdate", id='rangestartdate-tf').span2.required
				input#rangeenddate-tf(type="text", name="rangeenddate", id='rangeenddate-tf').span2.required

				hr
				h4 Step 4: Click Submit
				button(type="submit")#btn-evisit-submit.btn.btn-primary
					| Submit

					

		include modals/alert
		include modals/confirm


