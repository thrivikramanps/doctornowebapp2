	body

	block content
		#header-container
			#header-banner.well.span12

		#middle-container
			input#login-time.disabled(type='text', name='login-time', value= udata.logintime, style = " border: 0px none rgb(255, 255, 255)")
			input#login-account.disabled(type='text', name='login-account', value= udata.user, style ="margin-left: 270px; border: 0px none rgb(255, 255, 255)")
			button(type="button")#btn-home.btn.btn-primary
					| Home
			button(type="button")#btn-logout-user.btn.btn-primary
					| Logout
		
		#evisitlist.well.span6(style = " margin-left: 190px")
			h4(align="center") Appointment List
			table.listcontainerheader(style = " width: 100%")
				tr.tableheader
					th Number
					th Appointment Date
					th Start Time
					th End Time
					th Action
			table.listcontainer(style = " width: 100%; height: 200px; overflow-y: auto")
				if (listevisits.length === 0)
					tr.noevisits
						th No eVisits.
				each evisititem, index in listevisits
					tr.evisitrecord
						td.evisitrecordindex(align="center")
							span=index+1
								|.&nbsp;
						td.evisitrecorddate(align="center")
							span.name=evisititem.appointmentdate
						td.evisitrecordstart(align="center")
							span.name=evisititem.appointmentstarttime
						td.evisitrecordend(align="center")
							span.name=evisititem.appointmentendtime
						td.evisitrecordaction(align="center")
							input(type='submit', value='delete')

		#evisitpatientsublist.well.span5(style = "margin-left :30px")
			h4 Patient List
			div.patientlistcontainer(style = "height: 200px; overflow-y: auto")




		include modals/alert
		include modals/confirm


